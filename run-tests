
theCommand="clang++ "
theProgram=units-test

if [[ $# > 0 ]]
then
    theProgram=${1}
    shift
fi

theIncludePaths=""

while (( $# > 0 ))
do
    theIncludePaths="-I ${1} ${theIncludePaths}"
    shift
done

theCommand="clang++ \
    -std=c++14 \
    -stdlib=libc++ \
    ${theIncludePaths} \
    ${theProgram}.cpp \
    -o ${theProgram}"

#echo ${theCommand}
${theCommand}

rm units-test
